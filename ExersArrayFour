package Arrays;
/*4 Найти среднее значение элементов массива*/
/**
 * Created by vika on 01.08.15.
 */
public class ExersArrayFour {
    public static void main(String[] args) {
        int sum = 0;
        int half = 0;
        int arrayOne[] = {2, 2, 2, 2, 2, 2, 2, 2, 2};
        for(int i = 0; i < arrayOne.length; i++){
            sum += arrayOne[i];
            half = sum / arrayOne.length;
        }
        System.out.println(sum);
        System.out.println(half);
    }
}
